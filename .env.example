# Python Debug Tool - Environment Configuration
# Copy this file to .env and configure your settings

# Application Settings
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/python_debug_tool
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
REDIS_URL=redis://localhost:6379/0

# AI Services (Optional - choose at least one for AI features)
# OpenAI GPT Models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude Models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Perplexity for Research Features
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google Gemini Models
GOOGLE_API_KEY=your_google_api_key_here

# Mistral Models
MISTRAL_API_KEY=your_mistral_api_key_here

# Additional AI Providers
XAI_API_KEY=your_xai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
OLLAMA_API_KEY=your_ollama_api_key_here

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Analysis Configuration
MAX_FILE_SIZE_MB=10
MAX_ANALYSIS_TIME_MINUTES=30
CACHE_ANALYSIS_RESULTS=true
PARALLEL_PROCESSING=true
MAX_WORKERS=4

# Frontend Configuration (if developing UI)
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Optional: Vector Database (Chroma)
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=python_debug_tool

# Optional: Task Queue (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2